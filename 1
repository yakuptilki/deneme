    </body>
    </html>
	<script type="text/javascript">

        var app = new Vue({
            el: '#app',
            data: {
                isReady: false,
                ihaleler: [],
                lastSecond: true,
                katilimBedeli: true
            },
            methods: {
                checkIhale: function () {
                    var _this = this;
                    $.ajax({
                        type: "GET",
                        url: "https://www.ne-verirsen.com/hizli_ihaleler_copy.php",
                        dataType: "json",
                        success: function (data) {
                            if (data.status === 1) {
                                _this.ihaleler = data.data;
                                _this.lastSecond = data.data.kalan_saniye;
                                _this.katilimBedeli = data.data.katilimBedeli;
                                _this.isReady = true;
                            }
                        }
                    });

                },
                hizliTeklif: function (el) {
                    $.ajax({
                        type: "POST",
                        url: "ihale_cek.php?id=" + el,
                        dataType: "json",
                        success: function (data) {
                            if (data.status === 1) {
                                swal({
                                    html: true,
                                    title: "Başarılı",
                                    text: data.message + ' ' + data.gercek +
                                        ' TL teklifiniz verilmiştir.',
                                    type: "success",
                                    confirmButtonText: "Teşekkürler"
                                });
                                $('.bakiyeDurum').text(data.bakiye + ' Puan');

                            } else {
                                swal({
                                    html: true,
                                    title: "Hata",
                                    text: data.message,
                                    type: "warning",
                                    confirmButtonText: "Tamam"
                                });
                            }
                        }
                    });
                }
            },
            created: function () {
                var _this = this;
                this.checkIhale();
                setInterval(function () {
                    _this.checkIhale();
                }, 800)
            }
        })
		
    </script>
	<link rel="manifest" href="/manifest.json" />
